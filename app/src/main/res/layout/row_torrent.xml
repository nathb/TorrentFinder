<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/TorrentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Title"
            style="@style/TorrentPrimarySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/UploadedDate"
            style="@style/TorrentSecondarySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"/>

        <TextView
            android:id="@+id/UploadedByUserName"
            style="@style/TorrentSecondarySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_toRightOf="@id/UploadedDate"/>

        <TextView
            android:id="@+id/Size"
            style="@style/TorrentSecondarySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_toRightOf="@id/UploadedByUserName"/>

        <TextView
            android:id="@+id/SeedersAndLeechers"
            style="@style/TorrentSecondarySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_toRightOf="@id/Size"/>

    </RelativeLayout>

    <CheckBox
        android:id="@+id/ToDownloadCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>